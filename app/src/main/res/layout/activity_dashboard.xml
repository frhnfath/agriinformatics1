<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:paddingHorizontal="32dp">
        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Halo Selamat Datang"
            android:textSize="16sp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sabrina"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_below="@+id/welcome"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/therapy1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="32dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Counter"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/roundedmenu1"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="32dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Counter Kehadiran"
            android:textColor="#FFFFFF"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:background="@drawable/textmenu"
            android:paddingLeft="16dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/TentangSaya"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/roundedmenu1"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Tentang Saya"
            android:textColor="#FFFFFF"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:background="@drawable/textmenu"
            android:paddingLeft="16dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Gallery"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/roundedmenu1"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Gallery Kegiatan"
            android:textColor="#FFFFFF"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:background="@drawable/textmenu"
            android:paddingLeft="16dp"/>
    </RelativeLayout>

</LinearLayout>